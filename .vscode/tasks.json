{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build Sorter.exe",
            "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
            "args": [
                "-std=c++20",
                "-fdiagnostics-color=always",
                "-static",
                "-static-libgcc",
                "-static-libstdc++",
                "-g",
                "${workspaceFolder}/src/*.cpp",
                "-o",
                "${workspaceFolder}/build/Sorter.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}/src"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "Build UnitTests.exe",
            "type": "cppbuild",
            "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
            "args": [
                "-std=c++20",
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/test/*.cpp",
                "${workspaceFolder}/src/box_factories.cpp",
                "${workspaceFolder}/src/boxes.cpp",
                "${workspaceFolder}/src/objects.cpp",
                "${workspaceFolder}/src/player.cpp",
                "${workspaceFolder}/src/renderer.cpp",
                "${workspaceFolder}/src/world.cpp",
                "-I${workspaceFolder}/test",
                "-I${workspaceFolder}/src",
                "-o",
                "${workspaceFolder}/build/UnitTests.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$gcc"],
            "group": "build"
        },
    ]
}
